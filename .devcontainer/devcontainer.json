{
	"name": "pint",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.13",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "graphviz"
		}
	},
	"postCreateCommand": "pip install -e '.[test]';pip install -r requirements_docs.txt;pip install pre-commit;pre-commit install",
	"customizations": {
		"vscode": {
			"extensions": [
				"hbenl.vscode-test-explorer",
				"ms-python.python",
				"redhat.vscode-yaml",
				"tamasfe.even-better-toml"
			]
		}
	}
}
